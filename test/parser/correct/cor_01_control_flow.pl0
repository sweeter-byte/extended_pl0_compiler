program controlFlow;
var i, j, s;

begin
  s := 0;
  
  // IF statement
  i := 5;
  if i > 3 then s := s + 1;
  if i < 3 then s := s + 10 else s := s + 2; // Should add 2
  
  // WHILE loop
  i := 0;
  while i < 5 do
  begin
    s := s + 1;
    i := i + 1;
  end; // Should add 5

  // FOR loop (to)
  for j := 1 to 3 do s := s + 1; // Should add 3

  // FOR loop (downto)
  for j := 3 downto 1 do s := s + 1; // Should add 3
  
  write(s); // Expected: 1 + 2 + 5 + 3 + 3 = 14
end
