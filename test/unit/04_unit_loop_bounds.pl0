program loopBoundaries;
{ Test edge cases in for and while loops }
var i, count, sum;

begin
  { Test 1: for loop where start > end (should not execute) }
  count := 0;
  for i := 10 to 5 do
    count := count + 1;
  write(count);  { Should be 0 }

  { Test 2: for loop where start = end (should execute once) }
  count := 0;
  for i := 5 to 5 do
    count := count + 1;
  write(count);  { Should be 1 }

  { Test 3: for downto where start < end (should not execute) }
  count := 0;
  for i := 5 downto 10 do
    count := count + 1;
  write(count);  { Should be 0 }

  { Test 4: for downto where start = end (should execute once) }
  count := 0;
  for i := 5 downto 5 do
    count := count + 1;
  write(count);  { Should be 1 }

  { Test 5: for loop with negative range }
  sum := 0;
  for i := -3 to 3 do
    sum := sum + i;
  write(sum);  { -3 + -2 + -1 + 0 + 1 + 2 + 3 = 0 }

  { Test 6: for downto with negative range }
  sum := 0;
  for i := 3 downto -3 do
    sum := sum + i;
  write(sum);  { 3 + 2 + 1 + 0 + -1 + -2 + -3 = 0 }

  { Test 7: while loop that never executes }
  count := 0;
  i := 10;
  while i < 5 do begin
    count := count + 1;
    i := i + 1
  end;
  write(count);  { Should be 0 }

  { Test 8: while loop executes exactly once }
  count := 0;
  i := 5;
  while i <= 5 do begin
    count := count + 1;
    i := i + 1
  end;
  write(count);  { Should be 1 }

  { Test 9: for loop counting iterations }
  count := 0;
  for i := 1 to 100 do
    count := count + 1;
  write(count);  { Should be 100 }

  { Test 10: Verify loop variable after completion }
  for i := 1 to 5 do
    count := i;
  write(i)  { After loop, i should be 6 (one past end) }
end
{ Expected output:
0
1
0
1
0
0
0
1
100
6
}
